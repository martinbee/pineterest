
    <div class="row">
      <div class="page-header col-xs-8 col-xs-offset-2">
        <h1>Log In!</h1>
      </div>
    </div>
    <div class="row">
      <%= simple_form_for :session, url: :auth, remote: true  do |f| %>
        <div class= "col-xs-8 col-xs-offset-2">
          <%= f.input :email, label:false, placeholder: "Email"%>
          <%= f.input :password, label:false, placeholder:"Password" %>
          <%= f.submit "Log In", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= link_to "Or Join!", :new_user_modal, remote:true %>

    </div>
